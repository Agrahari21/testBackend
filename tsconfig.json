{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2015"],
    "target": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    }
  }
}
